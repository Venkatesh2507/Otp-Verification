<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/shippingCardView"
        android:layout_width="395dp"
        android:layout_height="141dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_background">

            <RadioButton
                android:id="@+id/ShippingRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:scaleX="1.4"
                android:scaleY="1.4" />

            <ImageView
                android:id="@+id/wareHouseImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/warehouse" />

            <TextView
                android:id="@+id/shippingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="149dp"
                android:layout_marginTop="38dp"
                android:text="Shipping"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="197dp"
                android:layout_height="36dp"
                android:layout_below="@+id/shippingTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="52dp"
                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/transporterCardView"
        android:layout_width="395dp"
        android:layout_height="141dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippingCardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_background">

            <RadioButton
                android:id="@+id/TransporterRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:scaleX="1.4"
                android:scaleY="1.4" />

            <ImageView
                android:id="@+id/TransporterImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/shipping" />

            <TextView
                android:id="@+id/busTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="149dp"
                android:layout_marginTop="38dp"
                android:text="Transporter"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="197dp"
                android:layout_height="36dp"
                android:layout_below="@+id/busTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="52dp"
                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_background"
        android:text="Continue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transporterCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>